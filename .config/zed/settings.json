{
  "theme": "Catppuccin Latte",
  "ui_font_family": "Inter Variable",
  "ui_font_fallbacks": ["Symbols Nerd Font", "Source Han Sans VF"],
  "ui_font_size": 16,
  "buffer_font_family": "Iosevka Term",
  "buffer_font_fallbacks": ["Symbols Nerd Font", "Source Han Sans VF"],
  "buffer_font_size": 14,

  "vim_mode": true,
  "use_smartcase_search": true,

  "tab_size": 2,

  "autosave": "on_focus_change",
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },

  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cn", "tv", "twMerge"]
      }
    }
  },

  "terminal": {
    "line_height": "standard",

    "toolbar": {
      "breadcrumbs": false
    },

    "scrollbar": {
      "show": "never"
    },

    "env": {
      "COLORTERM": "truecolor"
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },

  "auto_install_extensions": {
    "catppuccin": true
  }
}
