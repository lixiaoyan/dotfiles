{
  "theme": "Catppuccin Latte",
  "ui_font_family": "Lexend Deca",
  "ui_font_fallbacks": ["Symbols Nerd Font", "Source Han Sans VF"],
  "ui_font_size": 16,
  "buffer_font_family": "Iosevka Term",
  "buffer_font_fallbacks": ["Symbols Nerd Font", "Source Han Sans VF"],
  "buffer_font_size": 14,

  // https://github.com/zed-industries/zed/issues/20226
  "project_panel": {
    "auto_fold_dirs": false
  },

  "vim_mode": true,
  "use_smartcase_search": true,

  "tab_size": 2,

  "autosave": "on_focus_change",
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },

  "terminal": {
    "line_height": "standard",

    "toolbar": {
      "breadcrumbs": false
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },

  "auto_install_extensions": {
    "catppuccin": true
  }
}
